extends ./layout.jade

block content
        header
          .header-content
            .header-content-inner
              h1 Where musicians connect.
              |                 
              hr
              |                 
              p
                | MusicianLink allows you to easily connect with professional musicians in your area.
              |                 
              a.btn.btn-primary.btn-xl.page-scroll(href='/user') Sign up now!
        |     
        section#about.bg-primary
          .container
            .row
              .col-lg-8.col-lg-offset-2.text-center
                h2.section-heading Get your groove on.
                |                     
                hr.light
                |                     
                p.text-faded
                  | Join today and get connected with professional musicians.
                |                     
                a.btn.btn-default.btn-xl(href='/user') Get Started!
        |     
        section#services
          .container
            .row
              .col-lg-12.text-center
                h2.section-heading Networking, at your finger tips.
                |                     
                hr.primary
          |         
          .container
            .row
              .col-lg-4.col-md-6.text-center
                .service-box
                  i.fa.fa-4x.fa-globe.wow.bounceIn.text-primary
                  |                         
                  h3 Easy Connections
                  |                         
                  p.text-muted Join the thousands of seeking musicians and bands.
              |                 
              .col-lg-4.col-md-6.text-center
                .service-box
                  i.fa.fa-4x.fa-newspaper-o.wow.bounceIn.text-primary(data-wow-delay='.2s')
                  |                         
                  h3 Access Anywhere
                  |                         
                  p.text-muted Your next gig is waiting.
              |                 
              .col-lg-4.col-md-6.text-center
                .service-box
                  i.fa.fa-4x.fa-heart.wow.bounceIn.text-primary(data-wow-delay='.3s')
                  |                         
                  h3 Safe and Secure
                  |                         
                  p.text-muted We protect your data with the utmost integrity.  Your privacy is our priority.
        |     
        aside.bg-dark
          .container.text-center
            .call-to-action
              h2 Meet musicians like you!
              |                 
              a.btn.btn-default.btn-xl.wow.tada(href='/user') Join now for free!
        | 
        section#portfolio.no-padding
          .container-fluid
            .row.no-gutter
              .col-lg-4.col-sm-6
                a.portfolio-box(href='#')
                  img.img-responsive(src='/static/img/portfolio/guitarists.jpg', alt='')
                  |                         
                  .portfolio-box-caption
                    .portfolio-box-caption-content
                      .project-category.text-faded
                        | Connect with guitarists
                      |                                 
                      .project-name
                        | Guitar
              |                 
              .col-lg-4.col-sm-6
                a.portfolio-box(href='#')
                  img.img-responsive(src='/static/img/portfolio/vocalists.jpg', alt='')
                  |                         
                  .portfolio-box-caption
                    .portfolio-box-caption-content
                      .project-category.text-faded
                        | Connect with singers
                      |                                 
